<div class="alert alert-primary" role="alert">
  <div>
    Cookie data:<br/>
    <% if logged_in? %>
    <p><%= "Cookie - masteruserinfo: #{cookies.permanent.signed[:masteruserinfo]}" %></p>
    <p><%= "Cookie - currentuserid: #{cookies.permanent.signed[:currentuserid]}" %></p>
    <% end %>
  </div>
  <div>
    User data:<br/>
    <%= logged_in? ? "Current user is @#{current_user.screen_name}(#{current_user.twitter_id})." : "Not logged in." %>
    <% logged_in_users.each do |u| %>
      <p class="mt-3"><%= "@#{u.screen_name}(#{u.twitter_id}) logged in." %></p>
    <% end %>
  </div>
  <hr>
  <div>
    Debug log:<br/>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
