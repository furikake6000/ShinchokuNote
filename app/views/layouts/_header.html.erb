<header class="mb-3">
  <nav class="navbar navbar-expand-md navbar-light" style="background-color: #f0f0f6;">

    <%= link_to image_tag("logo.png", height: "48", class: "d-inline-block align-top"), root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "ホーム", root_path, class:"nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "進捗ノートの使い方", "/about", class:"nav-link"%>
        </li>
        <% if logged_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= "#{current_user.screen_name}" %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% logged_in_users.each do |u| %>
              <%= link_to "#{u.screen_name}に切替", "/switch?id=#{u.twitter_id}", class: "dropdown-item" if u != current_user %>
            <% end %>
            <%= link_to "アカウント追加", "/auth/twitter?force_login=true", class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", "/logout", class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "ログイン", "/auth/twitter", class:"nav-link"%>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>

</header>
