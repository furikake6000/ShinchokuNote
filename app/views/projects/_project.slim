.media-box.media-box-primary

    = render 'users/user_info', user: project.user if defined? with_user_info

    .media-content
        .bgstr
            = fa_icon 'file-text'

        h5
            = link_to project.name, note_path(project)
            = render 'projects/stagebadge', project: project
            = render 'notes/viewstancebadge', note: project
    
        .media-body
            .media-text #{limit_text(replace_url_to_link(h(project.desc)).html_safe, 140)}

        = render 'notes/note_footer', note: project