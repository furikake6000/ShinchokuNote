<h1>新規プロジェクト作成</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @project, url: {action: :create} do |f| %>
      <%= f.hidden_field :type, value: "Project" %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.submit "Create new project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
