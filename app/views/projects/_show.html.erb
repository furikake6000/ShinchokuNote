<% provide :body_bg, 'body-bg-primary' %>

<div class="tray-light-withedge-primary">
  <h1 class="h1-primary">
    <%= project.name %>
    <%= render 'projects/stagebadge', project: project %>
  </h1>
  <% if current_users_note? project %>
    <%= link_to '編集する', edit_note_path(project), class: 'btn btn-info btn-sm'  %>
  <% end %>

  <p class="mb-0"><%= project.desc %></p>

</div>

<ul class="nav nav-pills nav-justified mb-3" id="pills_tab" role="tablist">
<li class="nav-item">
  <a class="nav-link active" id="posts_tab" data-toggle="pill" href="#posts" role="tab" aria-controls="posts" aria-selected="true">進捗</a>
</li>
<li class="nav-item">
  <a class="nav-link" id="commentslist_tab" data-toggle="pill" href="#commentslist" role="tab" aria-controls="commentslist" aria-selected="false">コメント</a>
</li>
</ul>
<div class="tab-content" id="pills-tabContent">
<div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts_tab">

  <%= render 'posts/post_form', note: project if current_users_note?(project) %>
  <%= render 'notes/posts', note: project %>

</div>
<div class="tab-pane fade" id="commentslist" role="tabpanel" aria-labelledby="commentslist_tab">
  
  <% if user_can_comment?(project, current_user) %>
    <div id="comment-form" class="comment-form control-panel">
      <h3>コメント</h3>
      <%= render 'comments/comment_form', note: project %>
    </div>
  <% end %>
  <%= render 'notes/comments', {note: project, comments: @comments} if user_can_see_comments?(project, current_user) %>

</div>
</div>

<%= render 'notes/shareform', note: project %>

<%= render 'notes/foot_toolbar', note: project %>
