$all_tab = $("#comments_all_tab");
$unread_tab = $("#comments_unread_tab");
$read_tab = $("#comments_read_tab");
$favored_tab = $("#comments_favored_tab");

// disactive all tabs
$unread_tab.removeClass("active");
$read_tab.removeClass("active");
$all_tab.removeClass("active");
$favored_tab.removeClass("active");

<% if @comments_flag_all %>
    $all_tab.addClass("active");
<% elsif @comments_flag_unread %>
    $unread_tab.addClass("active");
<% elsif @comments_flag_read %>
    $read_tab.addClass("active");
<% elsif @comments_flag_favored %>
    $favored_tab.addClass("active");
<% end %>

$("#comments_container").html("<%= escape_javascript(render @comments) %>");
