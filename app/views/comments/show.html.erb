<%= link_to "#{@comment.to_note.name}に戻る", note_path(@comment.to_note) %>
<div class="comment mb-3">
<div class="media-box">
  <div class="media-text-xl"><%= @comment.text  %></div>
  <div class="media-footer">
    <span><%= smart_time_to_str(@comment.created_at) %></span>
    <% unless @comment.from_user.nil? || @comment.secret_anonimity? %>
      <span class="media-footer-right">by <%= @comment.from_user.name %></span>
    <% end %>
  </div>
</div>
<% if @comment.response_post %>
  <span class="text-muted"><%= fa_icon 'reply', text: 'このコメントに対する返信', class: 'mt-3' %></span>
  <%= render @comment.response_post %>
<% else %>
  <span class="text-muted"><%= fa_icon 'reply', text: '返信する', class: 'mt-3' %></span>
  <%= render partial: 'tweet_posts/tweet_post_new_form', locals: {note: @comment.to_note, response_to: @comment} %>
<% end %>
</div>
