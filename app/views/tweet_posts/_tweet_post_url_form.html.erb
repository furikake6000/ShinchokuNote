<%= form_for([note.becomes(Note), Post.new],
              url: note_tweet_posts_path(note),
              html: {method: 'POST'}) do |f| %>
  <%= f.hidden_field :type, value: "TweetPost" %>
  <div class="input-group">
    <%= f.text_field :twitter_id, placeholder: "リンクするツイートのURL", class:'form-control mr-3' %>
    <%= f.submit "リンク", class: "btn btn-primary" %>
  </div>
<% end %>
