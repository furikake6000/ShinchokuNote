<%= form_for([note.becomes(Note), Post.new],
              url: note_tweet_posts_path(note),
              html: {method: 'POST'}) do |f| %>
  <%= f.hidden_field :type, value: "TweetPost" %>
  <% if defined?(response_to) %>
    <%= f.hidden_field :response_to, value: response_to.id %>
  <% end %>
  <div class="input-group mb-2">
    <%= f.text_area :text, placeholder: 'つぶやく内容', class:'form-control' %>
  </div>
  <div class="input-group mb-2">
    <div id="image-form-virtual">
      <div><%= fa_icon 'photo 2x' %></div>
      <div>クリックで画像を選択</div>
      <div id="image-form-preview"></div>
    </div>
    <%= f.file_field :image, id: "image-form-hidden", multiple: true %>
  </div>
  <div class="text-right">
    <%= f.submit "Twitterでつぶやく", class: "btn btn-primary" %>
  </div>
<% end %>

<% content_for :javascript do %>
  <%= javascript_include_tag 'image-form-virtual'%>
<% end %> 
