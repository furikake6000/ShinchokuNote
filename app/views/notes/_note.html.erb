<div class="note cf">
  <%= image_tag(note.user.thumb_url, size: "96x96" , alt: note.user.name, class: "note-thumb") %>
  <div class="note-body">
    <h4>
      <%= link_to note.name, note_path(note) %>
      <%= render(partial: 'projects/stagebadge', locals:{project: note.becomes(Project)}) if note.type == 'Project' %>
    </h4>
    <p class="note-text"><%= note.desc %></p>

    <div class="note-reactionbox cf">
      <span>
        <%= link_to fa_icon('star', text: note.watching_users.size ), note_watchlists_toggle_path(note), method: :post, remote: true %>
      </span>
      <span><%= fa_icon 'envelope', text: '5' %></span>
      <span><i>進 55(+3)</i></span>
    </div>
  </div>
  <div class="note-bottombox">
  </div>
</div>
<div class="media-box">
  <div class="media-content">
    <h5>
      <%= link_to note.name, note_path(note) %>
      <%= render(partial: 'projects/stagebadge', locals:{project: note.becomes(Project)}) if note.type == 'Project' %>
    </h5>
    <%= note.desc %>

    <div class="media-toolbox cf">
      <div id="toggle_note_<%= note.id %>_watchlisted" class="tool <%= 'active' if note.watchlisted_by?(current_user) %>">
        <%= link_to fa_icon('star', text: note.watching_users.size ), note_watchlists_toggle_path(note), method: :post, remote: true %>
      </div>
      <div class="tool">
        <a><%= fa_icon 'envelope', text: '5' %></a>
      </div>
      <div class="tool">
        <a>進 55(+3)</a>
      </div>
    </div>

    <div class="media-footer">
      <span><%= smart_time_to_str(note.created_at) %></span>
    </div>
  </div>
</div>
