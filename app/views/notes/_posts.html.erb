<% note.posts.group_by { |p| p.created_at.year }.reverse_each do |y, y_posts| %>
    <% y_posts.group_by { |p| p.created_at.month }.reverse_each do |m, m_posts| %>
        <div class="note-timeline note-timeline-<%= note_color(note) %>">
            <%= render m_posts.sort_by(&:updated_at).reverse, baloon: true %>
            <div class="note-timeline-date">
                <div class="note-timeline-year">/ <%= y %></div>
                <div class="note-timeline-month-eng"><%= Date::MONTHNAMES[m] %></div>
                <div class="note-timeline-month"><%= m %></div>
            </div>
        </div>
    <% end %>
<% end %>
