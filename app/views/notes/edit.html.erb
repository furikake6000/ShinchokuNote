<h1>ノート編集</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @note, url: {action: :update} do |f| %>
      <%= f.select :type, [['リクエストボックス', 'RequestBox'], ['プロジェクト', 'Project'], ['構想中のプロジェクト', 'Idea']] %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.submit "Save note", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
