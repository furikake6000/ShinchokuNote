<%= render 'users/user_leftcol', user: current_user %>

<% content_for :rightcol do %>
    <%= render 'notes/random_button' %>
    <%= render 'users/recommended_users_button'%>
<% end %>

<% unless @recent_to_me_comments.empty? %>
  <div class="alert alert-success" role="alert">
    <%= @recent_to_me_comments.size %>件のコメントが新しく届いています！
    <%= link_to '通知を見る', notifications_path(), class: 'btn btn-success' %>
  </div>
<% end %>

<div class="tray-light-withedge">
<ul class="nav nav-tabs mb-3" id="posts_tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="watchlist_posts_tab" data-toggle="tab" href="#watchlist_posts" role="tab" aria-controls="watchlist_posts" aria-selected="true">ウォッチリスト</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="all_posts_tab" data-toggle="tab" href="#all_posts" role="tab" aria-controls="all_posts" aria-selected="false">全体の進捗</a>
  </li>
</ul>
<div class="tab-content" id="tabs-tabContent">
  <div class="tab-pane fade show active" id="watchlist_posts" role="tabpanel" aria-labelledby="watchlist_posts_tab">
    <% if @watching_posts.empty? %>
      <p class="text-center">
        まだウォッチリストに登録されたノートがありません。<br>
        気に入ったノートを登録してみましょう！
      </p>
    <% end %>
    <%= render @watching_posts, with_note_info: true %>
  </div>
  <div class="tab-pane fade" id="all_posts" role="tabpanel" aria-labelledby="all_posts_tab">
    <%= render @newest_posts, with_note_info: true %>
  </div>
</div>
</div>
