<h1>ユーザ編集</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user, url: {action: :update} do |f| %>
      <%= "アカウント情報: #{@user.name}" %>

      <%= f.label :desc %>
      <%= f.text_field :desc %>

      <%= f.submit "保存する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
